.swiper {
    max-height: 400px;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;

  &-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  &-slide img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  &-button-next {
    right: 100px;
    z-index: 1;
  }

  &-button-prev {
    left: 100px;
    z-index: 1;
  }
}
